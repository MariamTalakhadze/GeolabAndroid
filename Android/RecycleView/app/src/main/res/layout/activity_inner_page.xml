<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".InnerPageActivity">


    <ImageView
        android:id="@+id/detailed_image"
        app:layout_constraintDimensionRatio="H, 16:9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/detailed_image"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/MobileNumberPlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="Mobile: "
            />
        <TextView
            android:id="@+id/MobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/MobileNumberPlaceHolder"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="#555555"
            tools:text="bewbfoeb"
            />
        <TextView
            android:id="@+id/NamePlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MobileNumberPlaceHolder"
            android:layout_marginTop="2dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="Name: "
            />
        <TextView
            android:id="@+id/DetailedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/MobileNumberPlaceHolder"
            app:layout_constraintTop_toBottomOf="@id/MobileNumber"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:textColor="#555555"
            tools:text="bewbfoeb"
            />
        <TextView
            android:id="@+id/LastNamePlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NamePlaceHolder"
            android:layout_marginTop="2dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="LastName: "
            />
        <TextView
            android:id="@+id/DetailedLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/LastNamePlaceHolder"
            app:layout_constraintTop_toBottomOf="@id/DetailedName"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:textColor="#555555"
            tools:text="bewbfoeb"
            />
        <TextView
            android:id="@+id/AgePlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LastNamePlaceHolder"
            android:layout_marginTop="2dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="Age: "
            />
        <TextView
            android:id="@+id/DetailedAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/MobileNumberPlaceHolder"
            app:layout_constraintTop_toBottomOf="@id/DetailedLastName"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:textColor="#555555"
            tools:text="bewbfoeb"
            />
        <Button
            android:id="@+id/callme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DetailedAge"
            android:text="Call"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>